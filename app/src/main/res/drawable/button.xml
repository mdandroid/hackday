<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:enterFadeDuration="@android:integer/config_mediumAnimTime">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/app_pri_button_pressed" />
            <corners android:bottomRightRadius="3dp" android:bottomLeftRadius="3dp"
                     android:topLeftRadius="3dp" android:topRightRadius="3dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/app_pri_button" />
            <corners android:bottomRightRadius="3dp" android:bottomLeftRadius="3dp"
                     android:topLeftRadius="3dp" android:topRightRadius="3dp"/>
        </shape>
    </item>

</selector>